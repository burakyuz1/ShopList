@model List<Category>


<a asp-controller="Category" asp-action="Create" class="btn btn-success">Add New Category</a>
<div class="col-md-8">

    <table class="table table-hover mt-5">
        <thead>
            <tr>
                <th>Category Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td class="float-right">
                        <a class="btn btn-sm btn-outline-success" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id">Edit</a>
                        <form class="d-inline" asp-controller="Category" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@category.Id" />
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
