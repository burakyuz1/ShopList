@model List<ApplicationCore.Entities.Product>


<a asp-controller="Product" asp-action="Create" class="btn btn-success">Add New Product</a>
<div class="col-md-8">

    <table class="table table-hover mt-5">
        <thead>
            <tr>
                <th></th>
                <th>Product Name</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td><img src="~/img/@(product.PictureUri?? "default.png")" width="50" /></td>
                    <td>@product.Name</td>
                    <td>@product.Category.Name</td>
                    <td class="float-right">
                        <a class="btn btn-sm btn-outline-success" asp-controller="Product" asp-action="Update" asp-route-id="@product.Id">Edit</a>
                        <form class="d-inline" asp-controller="Product" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
